<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<libs>
		<Miao>
			<plugin>Standart</plugin>
			<deploy>
				<type><![CDATA[git]]></type>
				<tag><![CDATA[master]]></tag>
				<src>http://github.com/TheRatG/miao.git</src>
				<dst>${config.paths.libs}/miao/${config.libs.Miao.deploy.tag}</dst>
				<current>${config.paths.libs}/miao/current</current>
				<keep_old_versions><![CDATA[2]]></keep_old_versions>
			</deploy>
			<configure>
				<depends>
					<item>PHPUnit</item>
				</depends>	
				<dirs>					
					<item>
						<dir>${config.libs.Miao.deploy.dst}/data</dir>
					</item>
				</dirs>
				<files>
					<item>
						<src>${config.paths.build}/templates/scripts/setenv.sh.tpl</src>
						<dst>${config.paths.scripts}/setenv.sh</dst>
						<mode>0555</mode>
					</item>
					<item>
						<src>${config.paths.build}/templates/scripts/console.sh.tpl</src>
						<dst>${config.paths.scripts}/console.sh</dst>
						<mode>0555</mode>
					</item>					
				</files>
			</configure>
			<link></link>
			<modules>
				<Env>
					<error_level>30711</error_level>
					<default_timezone>Europe/Moscow</default_timezone>
					<unregister_globals>1</unregister_globals>
					<strip_global_slashes>1</strip_global_slashes>
					<umask>0</umask>
					<upload_tmp_dir>/tmp</upload_tmp_dir>
				</Env>
				<Session>
					<Handler>
						<type>none</type>
					</Handler>
				</Session>
				<TemplatesEngine>
					<PhpNative>
						<debug>0</debug>
						<logFilename>${config.paths.logs}/templates_engine_log</logFilename>
					</PhpNative>
				</TemplatesEngine>
			</modules>
		</Miao>
	</libs>
</config>